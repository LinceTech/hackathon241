{{>head}}
<div class="d-flex flex-column justify-content-center">
    <div class="m-5 border rounded d-flex flex-column justify-content-center">
        <div class="d-flex justify-content-start position-relative">
            <div class="p-2">
                <div class="h4 text-center">Locações</div>
            </div>
        </div>
        <div class="p-2">
            <button
                    class="btn btn-primary"
                    hx-get="/hackathon/locacoes/new"
                    hx-target="#mustache_modal"
                    hx-trigger="click"
                    data-bs-toggle="modal"
                    data-bs-target="#locacaoModal"
            >
                Cadastrar Locação
            </button>
        </div>
    </div>
    {{>locacoes/LocacaoLista}}
    <div
            class="modal fade"
            id="locacaoModal"
            tabindex="-1"
            aria-labelledby="exampleModalLabel"
            aria-hidden="true"
    >
        <div class="modal-dialog modal-dialog-centered" id="mustache_modal">
        </div>
    </div>
</div>
{{>footer}}