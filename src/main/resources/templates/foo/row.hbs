<tr id="fooItem{{bar}}">
    <td style="width: 40px; text-align: right;">{{bar}}</td>
    <td style="width: 200px; text-align: left;">{{bas}}</td>
    <td style="width: 300px; text-align: left;">{{boo}}</td>
    <td style="width: 50px">
        <img src="https://img.icons8.com/?size=18&id=71201&format=png&color=000000"
             alt="Editar item"
             style="cursor: pointer"
             hx-target="#fooForm"
             hx-replace="innerHTML"
             hx-get="foo/edit?bar={{bar}}">

        <img src="https://img.icons8.com/?size=18&id=67884&format=png&color=000000"
             alt="Apagar item"
             style="cursor: pointer"
             hx-target="#formAndTable"
             hx-select="#formAndTable"
             hx-replace="innerHTML"
             hx-get="foo/delete?bar={{bar}}"
             hx-include="[name='page']">
    </td>
</tr>