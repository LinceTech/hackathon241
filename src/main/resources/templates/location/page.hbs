<!DOCTYPE html>
<html lang="pt">
<head>
    <title>Cadastro</title>
    {{>head}}
</head>
<body style="
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
">

<h1>Cadastro de locação</h1>
<hr>

<div id="formAndTable">
    {{>location/form location}}

    <hr>

    <div id="locationItemsTable">
        <input type="hidden" name="page" value="{{index}}">
        <div style="display: inline-flex; padding-bottom: 12px;">
            {{#if hasPrevious}}
                <img src="https://img.icons8.com/?size=18&id=100033&format=png&color=000000"
                     alt="Página anterior"
                     style="cursor: pointer; width: 18px; height: 18px; padding-right: 4px"
                     hx-target="#formAndTable"
                     hx-select="#formAndTable"
                     hx-swap="outerHTML"
                     hx-get="location?page={{previous}}">
            {{/if}}

            <span style="height: 18px; vertical-align: center;">
                Pagina <b>{{page}}</b> de <b>{{totalPages}}</b>
            </span>

            {{#if next}}
                <img src="https://img.icons8.com/?size=18&id=98967&format=png&color=000000"
                     alt="Próxima página"
                     style="cursor: pointer; width: 18px; height: 18px; padding-left: 4px"
                     hx-target="#formAndTable"
                     hx-select="#formAndTable"
                     hx-swap="outerHTML"
                     hx-get="location?page={{next}}">
            {{/if}}
            <div class="inputs" id="inputs">
                <input type="text" name="clientFilter" id="clientFilter" placeholder="Cliente" value="{{filter.client}}">
                <input type="text" name="managerFilter" id="managerFilter" placeholder="Gerente" value="{{filter.manager}}">
                <input type="text" name="vehicleFilter" id="vehicleFilter" placeholder="Veículo" value="{{filter.vehicle}}">
                <input type="text" name="initialDateFilter" id="initialDateFilter" placeholder="Data de locação" value="{{filter.initialDate}}">
                <input type="text" name="finalDateFilter" id="finalDateFilter" placeholder="Data de entrega" value="{{filter.finalDate}}">
                <img src="https://img.icons8.com/?size=100&id=7695&format=png&color=000000"
                     alt="Pesqusiar"
                     style="cursor: pointer; width: 18px; height: 18px; padding-left: 4px"
                     hx-target="#formAndTable"
                     hx-select="#formAndTable"
                     hx-swap="outerHTML"
                     hx-get="location"
                     hx-include="[name='managerFilter'],[name='clientFilter'],[name='vehicleFilter'],,[name='initialDateFilter'],[name='finalDateFilter']"
                >
            </div>
        </div>

    </div>

    <table style="width: 1500px">
        <thead>
        <tr>
            <th style="width: 200px">Cliente</th>
            <th style="width: 140px">Gerente</th>
            <th style="width: 190px">Veículo</th>
            <th style="width: 120px">Data de locação</th>
            <th style="width: 50px"></th>
        </tr>
        </thead>
        <tbody>
        {{#locations}}
            {{>location/row}}
        {{/locations}}
        </tbody>
    </table>
</div>

</body>
</html>