{{>head}}
{{>script}}
<form id="formCliente">
    <input type="hidden" name="id" value="{{id}}">

    <div>
        <label>
            <span style="width: 50px; display: inline-block;">Cliente:</span>
            <span>
            <!-- Campo Nome -->
            <label for="nome">Nome:</label>
            <input type="text" id="nome" name="nome" maxlength="60" size="60" value="{{cliente.nome}}">
            {{#with errors}}
                {{#if nomeErro}}
                    <span class="error">
                        {{nomeErro}}
                    </span>
                {{/if}}
            {{/with}}

            <br><br>
            <!-- Campo CPF -->
            <label for="cpf">CPF:</label>
            <input type="text" id="cpf" name="cpf" maxlength="14" size="14" value="{{cliente.cpf}}">
                {{#with errors}}
                    {{#if cpfErro}}
                        <span class="error">
                            {{cpfErro}}
                        </span>
                    {{/if}}
                {{/with}}

            <br><br>
            <!-- Campo Data de Nascimento -->
            <label for="dataNascimento">Data de nascimento:</label>
            <input type="date" id="data_nascimento" name="data_nascimento" value="{{cliente.data_nascimento}}">
            {{#with errors}}
                {{#if dataErro}}
                    <span class="error">
                        {{dataErro}}
                    </span>
                {{/if}}
            {{/with}}
            <br><br>

                        <!-- Campo Telefone -->
            <label for="telefone">Telefone:</label>
            <input type="text" id="telefone" name="telefone" maxlength="10" size="10" value="{{cliente.telefone}}">
            {{#with errors}}
                {{#if telefoneErro}}
                    <span class="error">
                        {{telefoneErro}}
                    </span>
                {{/if}}
            {{/with}}
            <br><br>

            <!-- Campo E-mail -->
            <label for="email">E-mail:</label>
            <input type="email" id="email" name="email" maxlength="60" size="60" value="{{cliente.email}}">
            {{#with errors}}
                {{#if emailErro}}
                    <span class="error">
                        {{emailErro}}
                    </span>
                {{/if}}
            {{/with}}
            <br><br>

                        <!-- Campo CEP -->
            <label for="cep">CEP:</label>
            <input type="text" id="cep" name="cep" maxlength="9" size="9" onchange="getCep(this.value)" value="{{cliente.cep}}">
            {{#with errors}}
                {{#if cepErro}}
                    <span class="error">
                        {{cepErro}}
                    </span>
                {{/if}}
            {{/with}}
            <br><br>

                        <!-- Campo Cidade -->
            <label for="cidade">Cidade:</label>
            <input type="text" id="cidade" name="cidade" maxlength="60" size="60" value="{{cliente.cidade}}">
            {{#with errors}}
                {{#if cidadeErro}}
                    <span class="error">
                        {{cidadeErro}}
                    </span>
                {{/if}}
            {{/with}}
            <br><br>

             <!-- Campo Estado -->
            <label for="estado">Estado:</label>
            <input type="text" id="estado" name="estado" maxlength="2" size="2" value="{{cliente.estado}}">
            {{#with errors}}
                {{#if estadoErro}}
                    <span class="error">
                        {{estadoErro}}
                    </span>
                {{/if}}
            {{/with}}
            <br><br>

            <!-- Campo Bairro -->
            <label for="bairro">Bairro:</label>
            <input type="text" id="bairro" name="bairro" maxlength="60" size="60" value="{{cliente.bairro}}">
            {{#with errors}}
                {{#if bairroErro}}
                    <span class="error">
                        {{bairroErro}}
                    </span>
                {{/if}}
            {{/with}}
            <br><br>

                        <!-- Campo Rua -->
            <label for="rua">Rua:</label>
            <input type="text" id="rua" name="rua" maxlength="60" size="60" value="{{cliente.rua}}">
            {{#with errors}}
                {{#if ruaErro}}
                    <span class="error">
                        {{ruaErro}}
                    </span>
                {{/if}}
            {{/with}}
            <br><br>

                        <!-- Campo Número -->
            <label for="numero">Número:</label>
            <input type="text" id="numero" name="numero" maxlength="5" size="5" value="{{#if (eq cliente.numero 0)}}{{else}}{{cliente.numero}}{{/if}}">
            {{#with errors}}
                {{#if numeroErro}}
                    <span class="error">
                        {{numeroErro}}
                    </span>
                {{/if}}
            {{/with}}
            <br><br>


            </span>
            <br>
        </label>
    </div>


    <br>
    <button
            type="submit"
            hx-post="clientes/upsert"
            hx-target="form"
            style="display: inline-flex">
        <img src="https://img.icons8.com/?size=14&id=18764&format=png&color=000000" alt="Cadastrar item">
        &nbsp;
        {{#if bar}}
            Atualizar
        {{^}}
            Cadastrar
        {{/if}}
    </button>

</form>