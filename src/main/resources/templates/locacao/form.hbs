<form id="locacaoForm">
    <input type="hidden" name="id" value="{{id}}">
    <div>
        <label>
            <span style="width: 150px; display: inline-block;text-align: right;">Data Inicio:</span>
            <span>
                <input type="text" name="dataInicio" maxlength="14" size="14" value="{{dataInicio}}">
                {{#with errors}}
                    {{#if dataInicioError}}
                        <span class="error">
                            Marca: {{dataInicioError}}
                        </span>
                    {{/if}}
                {{/with}}
            </span>
            <br>
        </label>
    </div>
    <div>
        <label>
            <span style="width: 150px; display: inline-block;text-align: right;">Data Entrega:</span>
            <span>
                <input type="text" name="dataEntrega" maxlength="14" size="14" value="{{dataEntrega}}">
                {{#with errors}}
                    {{#if dataEntregaError}}
                        <span class="error">
                            Marca: {{dataEntregaError}}
                        </span>
                    {{/if}}
                {{/with}}
            </span>
            <br>
        </label>
    </div>
    <div>
        <label>
            <span style="width: 150px; display: inline-block;text-align: right;">Valor Diaria:</span>
            <span>
                <input type="text" name="valorDiaria" maxlength="14" size="14" value="{{valorDiaria}}">
