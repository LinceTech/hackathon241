        </label>
    </div>
    <div>
        <label>
            <span style="width: 150px; display: inline-block;text-align: right;">Placa Veiculo:</span>
            <span>
                <input type="text" name="placaVeiculo" maxlength="14" size="14" value="{{placaVeiculo}}">
                {{#with errors}}
                    {{#if veiculoPlacaError}}
                        <span class="error">
                            Marca: {{veiculoPlacaError}}
                        </span>
                    {{/if}}
                {{/with}}
            </span>
