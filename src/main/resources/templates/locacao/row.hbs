<tr id="cdlocacaoItem{{cdlocacao}}">
    <td style="width: 40px; text-align: right;">{{cdlocacao}}</td>
    <td style="width: 200px; text-align: left;">{{cdcliente}}</td>
    <td style="width: 300px; text-align: left;">{{cdgerente}}</td>
    <td style="width: 300px; text-align: left;">{{cdveiculo}}</td>
    <td style="width: 300px; text-align: left;">{{dtinicio}}</td>
    <td style="width: 300px; text-align: left;">{{dtentrega}}</td>
    <td style="width: 300px; text-align: left;">{{valdiaria}}</td>
    <td style="width: 300px; text-align: left;">{{pccomissao}}</td>
    <td style="width: 300px; text-align: left;">{{valpago}}</td>
    <td style="width: 300px; text-align: left;">{{datapagamento}}</td>

    <td style="width: 50px">
        <img src="https://img.icons8.com/?size=18&id=71201&format=png&color=000000"
             alt="Editar item"
             style="cursor: pointer"
             hx-target="#locacaoForm"
             hx-replace="innerHTML"
             hx-get="locacao/edit?CDLOCACAO={{cdlocacao}}">

        <img src="https://img.icons8.com/?size=18&id=67884&format=png&color=000000"
             alt="Apagar item"
             style="cursor: pointer"
             hx-target="#formAndTable"
             hx-select="#formAndTable"
             hx-replace="innerHTML"
             hx-get="locacao/delete?CDLOCACAO={{cdlocacao}}"
             hx-include="[name='page']">
    </td>
</tr>